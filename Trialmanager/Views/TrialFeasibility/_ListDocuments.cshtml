@using System.Web.UI.WebControls
@model Trialmanager.Models.TrialDocumentsModels
@{
    Layout = null;
}

@if (ViewBag.Documents == null)
{
    <p> There are no Documents currently attached to this Trial.</p>

    <!-- Content Wrapper. Contains page content -->
    
        <!-- Main content -->
   

}
else
{
    <!-- Content Wrapper. Contains page content -->

        <section class="content container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-solid box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Document List</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="listDocs" class="table table-bordered table-striped dataTable">
                                <thead>
                                <tr>
                                    <th>
                                        Document Type
                                    </th>
                                    <th>
                                        Date\Time
                                    </th>
                                    <th>
                                        Uploaded By
                                    </th>
                                    <th>
                                        Download
                                    </th>
                                    <th>
                                        Version
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in ViewBag.Documents)
                                {

                                    <tr>
                                        <td>
                                            @item.TypeName.TypeName
                                        </td>
                                        <td>
                                            @item.DateTime
                                        </td>
                                        <td>
                                            @item.UploadedBy
                                        </td>
                                        <td class="text-center">
                                            <a href="/TrialFeasibility/DownloadFile?FileName=@item.DocumentLink"><i class="fa fa-download"></i></a>
                                        </td>
                                        <td>
                                            @item.DocumentVersion
                                        </td>
                                        <td>
                                            @item.DocumentDescription
                                        </td>
                                        <td>
                                            <a href="/TrialDocuments/Edit/@item.Id"><i class="fa fa-edit"></i></a> |
                                            <a href="/TrialDocuments/Delete/@item.Id"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>

                                }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
        </section>
}