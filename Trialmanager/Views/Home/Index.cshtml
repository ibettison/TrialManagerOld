@model  IEnumerable<Trialmanager.Models.TrialFeasibilityModels>

@{
    ViewBag.Title = "Dashboard";
    ViewBag.Small = "Control Panel";
    ViewBag.Link = "Dashboard";
    ViewBag.Today = DateTime.Today;
    ViewBag.date1 = new DateTime(2019, 04, 18);
    ViewBag.date2 = new DateTime(2018, 09, 14);
    ViewBag.date1Days = (ViewBag.date1 - ViewBag.Today).TotalDays;
    ViewBag.date2days = (ViewBag.date2 - ViewBag.Today).TotalDays;
    ViewBag.CI = "Professor Tim Robins";
}

@if (User.Identity.IsAuthenticated)
{
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                @ViewBag.Title
                <small>@ViewBag.Small</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="/Home/Index"><i class="fa fa-dashboard"></i>@ViewBag.link</a></li>
                <li class="active">@ViewBag.Title</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content container-fluid">
            <div class="row">
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-aqua">
                        <div class="inner">
                            <h3>@ViewBag.Feasibility</h3>
                            <p>Feasibility</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-inbox"></i>
                        </div>
                        <a href="#" class="small-box-footer">More Info<i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-green">
                        <div class="inner">
                            <h3>@ViewBag.Late</h3>
                            <p>Late Development</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-hourglass-2"></i>
                        </div>
                        <a href="#" class="small-box-footer">More Info<i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-red">
                        <div class="inner">
                            <h3>@ViewBag.Live</h3>
                            <p>Live Projects</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-puzzle-piece"></i>
                        </div>
                        <a href="#" class="small-box-footer">More Info<i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-blue">
                        <div class="inner">
                            <h3>@ViewBag.Closed</h3>
                            <p>Closed Projects</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-thumbs-up"></i>
                        </div>
                        <a href="#" class="small-box-footer">More Info<i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Recent trials</h3>
                            <!-- /.box-tools -->
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <h5>This Week</h5>
                            <a href="#">IntegRatE Well</a><BR />
                            <a href="#">TakEAChance</a><BR />
                            <a href="#">ANAppleADay</a><BR />
                            <a href="#">Zim4Tea</a><BR />
                            <a href="#">JacobsLadder</a><BR />
                            <a href="#">PuFFTheDragon</a><BR />
                            <a href="#">WhackYRaCES</a><BR />
                            <a href="#">BoomBoom</a><BR />
                            <a href="#">ChittyChittyBangBang</a><BR />
                            <hr />
                            <h5>Last Week</h5>
                            <a href="#">IntegRatE Well</a><BR />
                            <a href="#">TakEAChance</a><BR />
                            <a href="#">ANAppleADay</a><BR />
                            <a href="#">Zim4Tea</a><BR />
                            <hr />
                            <h5>Over two Weeks</h5>
                            <a href="#">JacobsLadder</a><BR />
                            <a href="#">PuFFTheDragon</a><BR />
                            <a href="#">WhackYRaCES</a><BR />
                            <a href="#">BoomBoom</a><BR />
                            <a href="#">ChittyChittyBangBang</a><BR />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">List of Trials</h3>
                            <!-- /.box-tools -->
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">

                            <table id="example" class="table table-striped table-bordered" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Trial Name</th>
                                        <th>Trial Type</th>
                                        <th>Status</th>
                                        <th>Chief Investigator</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.ActionLink(Html.DisplayFor(modelItem => item.ShortName).ToString(), "Edit", new { id = item.Id })
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TrialTypeName.TrialTypeName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Commercial)
                                            </td>
                                            <td>
                                                @Html.Raw(ViewBag.CI)
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Trial Name</th>
                                        <th>Trial Type</th>
                                        <th>Status</th>
                                        <th>Chief Investigator</th>
                                    </tr>
                                </tfoot>
                            </table>

                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            List of Trials
                        </div>
                        <!-- box-footer -->
                    </div>
                    <!-- /.box -->
                </div>
                <div class="col-md-4">
                    <div class="box box-widget widget-user-2">
                        <div class="widget-user-header bg-red-active">
                            <div class="widget-user-image">
                                <img class="img-circle" src="../Content/hourglass.jpg" />
                            </div>
                            <h3 class="widget-user-username">Global Reminders</h3>
                            <h5 class="widget-user-desc">A countdown list for reports and Information gathering</h5>
                        </div>

                        <div class="box-footer">
                            <div class="row">
                                <table id="example1" class="table" style="width: 100%">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Reminder</th>
                                            <th>Days till Due</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>18/04/2019</td>
                                            <td>NIHR Report Due</td>
                                            <td>@ViewBag.date1Days Days</td>
                                        </tr>
                                        <tr>

                                            <td>14/09/2018</td>
                                            <td>REC Progress Report</td>
                                            <td>@ViewBag.date2days Days <span class="label label-warning">< 50 days</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <div class="box box-widget widget-user-2">
                        <div class="widget-user-header bg-blue-active">
                            <div class="widget-user-image">
                                <img class="img-circle" src="../Content/notifications-smartphone.jpg" />
                            </div>
                            <h3 class="widget-user-username">Global Notifications</h3>
                            <h5 class="widget-user-desc">All messages will be seen by all users</h5>
                        </div>

                        <div class="box-footer">
                            <div class="row">
                                <table id="example1" class="table" style="width: 100%">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Who</th>
                                            <th>Message</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>18/04/2018</td>
                                            <td>Clare Jordison</td>
                                            <td>We need a night out</td>
                                        </tr>
                                        <tr>

                                            <td>27/07/2018</td>
                                            <td>Clare Jordison</td>
                                            <td>Come on we need a good night on the toon!</td>
                                        </tr>
                                        <tr>

                                            <td>27/07/2018</td>
                                            <td>Ian Bettison</td>
                                            <td>I'm working on the application and hopefully it'll work for you.</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.box -->
            </div>

        </section>
        <!-- /.content -->
    </div>
}
else
{
    <div class="content-wrapper" style="margin-left: 0px;">
        <section class="content container-fluid">
            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    <div class="jumbotron">
                        <h1>Mitochondrial Research Group</h1>
                        <p class="lead">Research Co-ordination and Management Database</p>
                        <div style="text-align: center;"><img src="~/Content/Research_microscope.jpg" width="80%" height="auto" /></div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-offset-2 col-md-3">
                    <h2>Login to the Database</h2>
                    <p>
                        If you have a user Id and password then login to the Mitochondrial Research Co-ordination and Management Database. If
                        you would like to register then you will need to contact <a href="mailto:laura.brown@newcastle.ac.uk">Laura Brown</a> or <a href="mailto:clare.Jordison@newcastle.ac.uk">Clare Jordison</a> who will set you up with an ID and Password.
                    </p>
                    <p>
                        <a class="btn btn-default" href="~/Account/Login">Login &raquo;</a>
                    </p>
                </div>
                <div class="col-md-3">
                    <h2>Mitochondrial Web pages</h2>
                    <p>The Wellcome centre Mitochondrial Research website at Newcastle University contains lots more information about the disease and our research.</p>
                    <p>
                        <a class="btn btn-default" href="http://www.newcastle-mitochondria.com/">Learn more &raquo;</a>
                    </p>
                </div>
                <div class="col-md-3">
                    <h2>Contact Us</h2>
                    <p>
                        The centre is based in the Cookson Building at Newcastle University. The Clinical Administrative team can be contacted on 0191 282 0340 - Fax 0191 282 4373. The main
                        Team can be contacted on 0191 208 3084 - Fax 0191 208 5685.
                    </p>
                    <p>
                        <a class="btn btn-default" href="http://www.newcastle-mitochondria.com/contact-us/">Learn more &raquo;</a>
                    </p>
                </div>
            </div>
        </section>
    </div>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });

    </script>
}

